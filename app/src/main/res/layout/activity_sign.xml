<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E9B2"
    tools:context=".Sign">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-30dp"
        app:srcCompat="@drawable/whitebox" />

    <TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/imageView8"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="121dp"
    android:text="أجمع بطاقاتك."
    android:fontFamily="@font/ibm_arab_plex_2"
    android:textStyle="bold"
    android:textColor="#3C3C3C"
    android:textSize="50sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/ibm_arab_plex_2"
        android:text="بأمان."
        android:textColor="#3C3C3C"
        android:textSize="50sp" />

    <Button
        android:id="@+id/createAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-130dp"
        android:background="@drawable/make"
        android:fontFamily="@font/ibm_arab_plex"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:text="أنشئ حساب"
        android:textColor="#3C3C3C"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="-130dp"
        android:background="@drawable/sign_in"
        android:fontFamily="@font/ibm_arab_plex"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:text="سجل دخولك"
        android:textColor="#B0C9F4"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>